{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Serve Jekyll",
			"command": "bundle exec jekyll serve --livereload",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": {
						"regexp": ".*"
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "\\s*Server running\\.\\.\\. press ctrl-c to stop\\.",
						"endsPattern": "$a"
					}
				}
			],
			"group": "build"
		}
	]
}